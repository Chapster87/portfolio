---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

const { imagePath, altText, className, width, height, loading } = Astro.props
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/**/*.{jpeg,jpg,png,gif,webp,svg}')
if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "/src/assets/images/*.{jpeg,jpg,png,gif,webp,svg}"`);

---

<Image
  src={images[imagePath]()}
  alt={altText}
  class={className}
  width={width}
  height={height}
  loading={loading} />